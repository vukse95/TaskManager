<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dodaj_zadatak"
    tools:context="ra210_2014.com.example.student.taskmanager.StatistikaLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/upperPie"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_alignParentTop="true"
        android:gravity="center">
        <ra210_2014.com.example.student.taskmanager.PieChart
            android:id="@+id/pie_chart1"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lowerPie"
        android:layout_below="@+id/upperPie"
        android:gravity="center">
        <ra210_2014.com.example.student.taskmanager.PieChart
            android:id="@+id/pie_chart2"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
        <ra210_2014.com.example.student.taskmanager.PieChart
            android:id="@+id/pie_chart3"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/backButton"
            android:text="@string/backButton"/>
    </LinearLayout>
</RelativeLayout>
